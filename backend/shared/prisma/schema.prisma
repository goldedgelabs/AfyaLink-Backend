datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Users & Roles
model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  password  String
  role      String   @default("patient") // patient, doctor, admin, superadmin
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Hospitals & Labs
model Hospital {
  id        Int      @id @default(autoincrement())
  name      String
  location  String?
  createdAt DateTime @default(now())
}

model Lab {
  id        Int      @id @default(autoincrement())
  name      String
  hospital  Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId Int
  createdAt DateTime @default(now())
}

// Patients & Appointments
model Patient {
  id        Int      @id @default(autoincrement())
  fullName  String
  dob       DateTime?
  gender    String?
  notes     String?
  hospital  Hospital? @relation(fields: [hospitalId], references: [id])
  hospitalId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id         Int      @id @default(autoincrement())
  patient    Patient  @relation(fields: [patientId], references: [id])
  patientId  Int
  doctor     User?    @relation(fields: [doctorId], references: [id])
  doctorId   Int?
  date       DateTime
  notes      String?
  status     String   @default("scheduled") // scheduled, done, canceled
  createdAt  DateTime @default(now())
}

// Lab results
model LabResult {
  id        Int      @id @default(autoincrement())
  lab       Lab      @relation(fields: [labId], references: [id])
  labId     Int
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId Int
  type      String
  value     String
  notes     String?
  createdAt DateTime @default(now())
}

// Audit
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String
  entity    String?
  meta      Json?
  createdAt DateTime @default(now())
}
