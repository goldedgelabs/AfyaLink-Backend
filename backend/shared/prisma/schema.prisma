datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client { provider = "prisma-client-js" }

model User { id Int @id @default(autoincrement()) name String email String @unique password String role String @default("patient") createdAt DateTime @default(now()) updatedAt DateTime @updatedAt }
model Hospital { id Int @id @default(autoincrement()) name String location String? createdAt DateTime @default(now()) }
model Patient { id Int @id @default(autoincrement()) fullName String dob DateTime? gender String? hospitalId Int? createdAt DateTime @default(now()) updatedAt DateTime @updatedAt }
model Appointment { id Int @id @default(autoincrement()) patientId Int doctorId Int? date DateTime notes String? status String @default("scheduled") createdAt DateTime @default(now()) }
model AuditLog { id Int @id @default(autoincrement()) userId Int? action String entity String? meta Json? createdAt DateTime @default(now()) }
